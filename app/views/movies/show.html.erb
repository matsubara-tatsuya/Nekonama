<h2><%= @movie.room_name %></h2>
<h2>詳細</h2>
<p><%= @movie.detail %></p>

<!-- ビデオ表示 -->
<%= render 'movies/video' %>

<!-- editアクションへのリンクを作成-->
<%= link_to "編集", edit_movie_path(@movie.id), class: "btn edit-btn" %>
<%= link_to "削除", destroy_movie_path(@movie.id), method: "delete", class: "btn destroy-btn", "data-confirm" => "本当に削除します？" %>